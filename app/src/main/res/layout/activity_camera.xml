<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CameraActivity">

    <FrameLayout
        android:id="@+id/mFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/btn_start_preview"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="60dp"
        android:text="开始预览" />

    <Button
        android:id="@+id/btn_stop_preview"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="140dp"
        android:layout_marginBottom="60dp"
        android:enabled="false"
        android:text="停止预览" />

    <Button
        android:id="@+id/btn_preview_test"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="250dp"
        android:layout_marginBottom="60dp"
        android:enabled="true"
        android:text="循环开关预览测试"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/et_cyclic_time"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="360dp"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:inputType="number"
        android:text="3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="410dp"
        android:layout_marginBottom="70dp"
        android:text="秒"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btn_take_photo"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="10dp"
        android:enabled="false"
        android:text="拍照" />

    <Button
        android:id="@+id/btn_recorder"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="140dp"
        android:layout_marginBottom="10dp"
        android:enabled="false"
        android:text="开始录制" />

    <Button
        android:id="@+id/btn_pause_recording"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="250dp"
        android:layout_marginBottom="10dp"
        android:enabled="false"
        android:text="暂停录制" />

    <Button
        android:id="@+id/btn_resume_recording"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="360dp"
        android:layout_marginBottom="10dp"
        android:enabled="false"
        android:text="继续录制" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:gravity="center"
        android:text="00:00:00"
        android:textColor="@android:color/black"
        android:visibility="invisible" />

</RelativeLayout>